
<video autoplay muted loop id="splashVideo">
    <source src="/assets/images/Keep_Running.mp4" type="video/mp4">
</video>
<div class="containerSignUp">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <br><h1 class="containerSignUp__heading">Sign Up! <i class="fa fa-sign-in-alt" aria-hidden="true"></i>
</h1><br>
      <form class="signup">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name-input" placeholder="First Name">
        </div>
        <div class="form-group">
          <label for="age">Age</label>
          <input type="number" class="form-control" id="age-input" placeholder="Age">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="email-input" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="password-input" placeholder="Password">
        </div>
          <label for="diet">Dietary Preference: </label>
          <select class="containerSignUp__select" id="diet-input">
            <option class="containerSignUp__select--heading" value="Omnivore">Select One</option>
            <option class="containerSignUp__select--option" value="Gluten Free">Gluten Free</option>
            <option class="containerSignUp__select--option" value="Omnivore">Omnivore</option>
            <option class="containerSignUp__select--option" value="Vegan">Vegan</option>
            <option class="containerSignUp__select--option" value="Vegetarian">Vegetarian</option>
          </select>
          <br>
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span> <span class="msg"></span>
        </div>
        <button type="submit" class="btn_signUp">Sign Up</button>
        <p class="containerSignUp__message">Or, if you have already signed up you can log in here:</p>
       <a href="/login" class="btn_logIn" >Log In</a>
      </form>
      <br />
    </div>
  </div>
</div>
