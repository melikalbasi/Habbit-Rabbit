<header>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/logout">
                    Logout
                </a>
                <a class="navbar-brand" href="/logout">
                    Home
                </a>
            </div>
        </div>

            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h2>Welcome <span class="member-name"></span></h2>
                    </div>
                </div>
            </div>
            <div class="nav-wrapper black accent-2 z-depth-5">

                <div class="col s12">
                    <a href="/home" class="brand-logo" id="logo">
                        <h1 class="z-depth-5">Habit Rabbit</h1>
                    </a>
                </div>
